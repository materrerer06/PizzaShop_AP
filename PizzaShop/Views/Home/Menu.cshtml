@model List<PizzaShop.Domain.entities.Pizza>
@{
}

<div class="card bg-secondary mb-3 mainbody">

<h1 class="text-danger">Menu</h1>
<table class="table table-hover">
    <thead>
        <tr class="table-warning">
            <th scope="row">Nazwa</th>
            <th scope="row">Opis</th>
            <th scope="row">Składniki</th>
            <th scope="row">Alergeny</th>
            <th scope="row">Cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pizza in Model)
        {
            <tr class="table-success">
                <td>@pizza.Title</td>
                <td>@pizza.Description</td>
                <td>@string.Join(", ", pizza.Details.Skladniki ?? new List<string>())</td>
                <td>@string.Join(", ", pizza.Details.Alergeny ?? new List<string>())</td>
                <td>@pizza.Price zł</td>
                <td>
                    <form action="@Url.Action("AddToCart", "Menu", new { pizzaId = pizza.Id })" method="post">
                        <button type="submit" class="btn btn-outline-success">KUP</button>
                    </form>
                </td>
                
            </tr>
        }
    </tbody>
</table>
</div>